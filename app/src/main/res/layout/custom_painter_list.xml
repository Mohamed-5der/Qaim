<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/re"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/custom_edittext_field">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="4dp"
            app:cardCornerRadius="10dp"
            app:cardUseCompatPadding="true">

            <ImageView
                android:id="@+id/image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:src="@drawable/group9819" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="4dp"
            android:layout_toLeftOf="@id/cardView"
            android:orientation="vertical"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/tittle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="tittle"
                android:textColor="#313131"
                android:textDirection="rtl"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal"
                android:textDirection="rtl">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginBottom="4dp"
                        android:maxLines="1"
                        android:text="رسوم المعاينة"
                        android:textColor="#585858"
                        android:textDirection="rtl"
                        android:textSize="12dp" />

                    <!--                    <TextView-->
                    <!--                        android:id="@+id/cost"-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:layout_marginStart="4dp"-->
                    <!--                        android:layout_marginTop="4dp"-->
                    <!--                        android:layout_marginEnd="4dp"-->
                    <!--                        android:layout_marginBottom="4dp"-->
                    <!--                        android:layout_toLeftOf="@id/description"-->
                    <!--                        android:maxLines="1"-->
                    <!--                        android:text="400 ريال"-->
                    <!--                        android:textColor="#02A609"-->
                    <!--                        android:textDirection="rtl"-->
                    <!--                        android:textSize="12dp" />-->
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/showProfile"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_add_btn"
                    android:text="@string/showProfile"
                    android:textColor="#FFF"
                    android:textSize="8sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/choose"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_choose_btn"
                    android:text="@string/choose"
                    android:textColor="#FFF"
                    android:textSize="8sp" />

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>