<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.AboutUsFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/group8937"
        android:layout_marginTop="-200dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:id="@+id/topView"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="من نحن ‘‘قيم‘‘"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#FFF"
            android:textSize="25sp"
            />

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topView"
        android:layout_marginTop="24dp"
        android:scrollbars="none"
        android:background="@drawable/bottom_sheet_dialog"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:id="@+id/imageCard"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="#303030"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/about_bg"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="من نحن"
                android:textSize="20sp"
                android:textDirection="rtl"
                android:textStyle="bold"
                android:textColor="#303030"
                android:layout_below="@id/imageCard"
                android:layout_marginTop="8dp"
                android:id="@+id/whoUs"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="من نحن"
                android:textSize="18sp"
                android:textDirection="rtl"
                android:textColor="#525252"
                android:layout_below="@id/whoUs"
                android:layout_marginTop="8dp"
                android:id="@+id/whoUsTxt"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="خدماتنا"
                android:textSize="20sp"
                android:textDirection="rtl"
                android:textStyle="bold"
                android:textColor="#303030"
                android:layout_below="@id/whoUsTxt"
                android:layout_marginTop="8dp"
                android:id="@+id/service"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="خدماتنا"
                android:textSize="18sp"
                android:textDirection="rtl"
                android:textColor="#525252"
                android:layout_below="@id/service"
                android:layout_marginTop="8dp"
                android:id="@+id/serviceTxt"
                android:layout_marginBottom="82dp"
                />
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>