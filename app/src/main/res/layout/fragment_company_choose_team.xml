<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.CompanySetTeamFragment">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/group8937"
        android:layout_marginTop="-200dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:id="@+id/topView"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chooseTeam"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#FFF"
            android:textSize="25sp"
            />
        <ImageButton
            android:id="@+id/imageBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/group9810"
            android:background="#00000000"
            android:layout_marginRight="16dp"
            />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topView"
        android:layout_marginTop="24dp"
        android:background="@drawable/bottom_sheet_dialog"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/addpreviewer"

                    android:textColor="#303030"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:id="@+id/choosePre"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/group9822"
                        android:id="@+id/addPrevImage"
                        android:layout_marginTop="8dp"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:id="@+id/relPrevDetails"
                        android:visibility="gone"
                        >
                        <androidx.cardview.widget.CardView
                            android:layout_width="64dp"
                            android:layout_height="60dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            card_view:cardCornerRadius="10dp"
                            android:id="@+id/prevImageCard"
                            >
                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="60dp"
                                android:src="@drawable/icon"
                                android:id="@+id/preivImage"
                                />
                        </androidx.cardview.widget.CardView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_toLeftOf="@id/prevImageCard"
                            android:layout_marginRight="8dp"
                            android:layout_centerVertical="true"

                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/prevName"
                                android:textSize="14sp"
                                android:textColor="#303030"
                                android:text="@string/name"
                                android:maxLines="1"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/prevDescription"
                                android:textSize="12sp"
                                android:textColor="#303030"
                                android:layout_marginTop="8dp"
                                android:text="@string/description"
                                android:maxLines="2"
                                />
                        </LinearLayout>
                    </RelativeLayout>

                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/addPainter"

                    android:textColor="#303030"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:id="@+id/chooseArtist"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/group9822"
                        android:id="@+id/addArtistImage"
                        android:layout_marginTop="8dp"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:id="@+id/relArtisiDetails"
                        android:visibility="gone"
                        >
                        <androidx.cardview.widget.CardView
                            android:layout_width="64dp"
                            android:layout_height="60dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            card_view:cardCornerRadius="10dp"
                            android:id="@+id/imageCard"
                            >
                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="60dp"
                                android:src="@drawable/icon"
                                android:id="@+id/artistImage"
                                />
                        </androidx.cardview.widget.CardView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_toLeftOf="@id/imageCard"
                            android:layout_marginRight="8dp"
                            android:layout_centerVertical="true"

                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/artistName"
                                android:textSize="14sp"
                                android:textColor="#303030"
                                android:text="@string/name"
                                android:maxLines="1"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/artistDescription"
                                android:textSize="12sp"
                                android:textColor="#303030"
                                android:layout_marginTop="8dp"
                                android:text="@string/description"
                                android:maxLines="2"
                                />
                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Addreviwer"

                    android:textColor="#303030"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:id="@+id/chooseReviwer"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/group9822"
                        android:id="@+id/addReviwerImage"
                        android:layout_marginTop="8dp"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:id="@+id/relrevDetails"
                        android:visibility="gone"
                        >
                        <androidx.cardview.widget.CardView
                            android:layout_width="64dp"
                            android:layout_height="60dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            card_view:cardCornerRadius="10dp"
                            android:id="@+id/revImageCard"

                            >
                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="60dp"
                                android:src="@drawable/icon"
                                android:id="@+id/revImage"
                                />
                        </androidx.cardview.widget.CardView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_toLeftOf="@id/revImageCard"
                            android:layout_marginRight="8dp"
                            android:layout_centerVertical="true"

                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/revName"
                                android:textSize="14sp"
                                android:textColor="#303030"
                                android:text="@string/name"
                                android:maxLines="1"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/revDescription"
                                android:textSize="12sp"
                                android:textColor="#303030"
                                android:layout_marginTop="8dp"
                                android:text="@string/description"
                                android:maxLines="2"
                                />
                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_end_orders_btn"
                android:textColor="#FFF"
                android:text="@string/confirm"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="82dp"
                android:visibility="invisible"
                />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>