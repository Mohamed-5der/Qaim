<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.CompanyProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/group8937"
            android:layout_marginTop="-200dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:id="@+id/topView"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/editeProfile"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="#FFF"
                android:textSize="25sp"
                android:id="@+id/tittle"
                />
            <ImageButton
                android:id="@+id/imageBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/group9810"
                android:background="#00000000"
                android:layout_marginRight="16dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bottom_sheet_dialog"
            android:layout_below="@id/topView"
            android:layout_marginTop="64dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="44dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_horizontal"
                    android:textSize="30sp"
                    android:textColor="#000"
                    android:id="@+id/nameofuser"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/name"
                        android:gravity="right"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/custom_edittext_field"
                        android:orientation="horizontal"
                        android:layoutDirection="rtl">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/iconly_light_profile"
                            android:layout_margin="12dp"/>

                        <View
                            android:layout_width="3dp"
                            android:layout_height="match_parent"
                            android:background="#DDD"
                            />

                        <EditText
                            android:id="@+id/EditProfileNameEditText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp"
                            android:textSize="16sp"
                            android:gravity="center_vertical"
                            android:background="#00000000" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/client_company_email"
                        android:gravity="right"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/custom_edittext_field"
                        android:orientation="horizontal"
                        android:layoutDirection="rtl">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/iconly_light_message"
                            android:layout_margin="12dp"/>
                        <View
                            android:layout_width="3dp"
                            android:layout_height="match_parent"
                            android:background="#DDD"
                            />
                        <EditText
                            android:id="@+id/emailEditText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp"
                            android:textSize="16sp"
                            android:gravity="center_vertical"
                            android:background="#00000000" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/client_company_phone"
                        android:gravity="right"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/custom_edittext_field"
                        android:orientation="horizontal"
                        android:layoutDirection="rtl">

                        <com.hbb20.CountryCodePicker
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/countryCode"
                            app:ccp_defaultNameCode="sa"
                            />
                        <View
                            android:layout_width="3dp"
                            android:layout_height="match_parent"
                            android:background="#DDD"
                            />
                        <EditText
                            android:id="@+id/phoneEditText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp"
                            android:textSize="16sp"
                            android:inputType="number"
                            android:maxLength="11"
                            android:hint="@string/_50"
                            android:gravity="center_vertical"
                            android:background="#00000000" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/chooseCountry"
                        android:gravity="right"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/custom_edittext_field"
                        android:orientation="horizontal"
                        android:layoutDirection="rtl">

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/countrySpinner"
                            android:layout_margin="8dp"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/chooseCity"
                        android:gravity="right"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/custom_edittext_field"
                        android:orientation="horizontal"
                        android:layoutDirection="rtl">
                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/citySpinner"
                            android:layout_margin="8dp"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    android:textDirection="rtl"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/licenceNum"
                        android:gravity="right"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:id="@+id/licenceName"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/custom_edittext_field"
                        android:orientation="horizontal"
                        android:id="@+id/licenceli"
                        android:layoutDirection="rtl">
                        <EditText
                            android:id="@+id/licenceEditText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp"
                            android:textSize="16sp"
                            android:gravity="center_vertical"
                            android:textDirection="rtl"
                            android:background="#00000000"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/addInfo"
                        android:gravity="right"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:background="@drawable/custom_edittext_field"
                        android:orientation="horizontal"
                        android:layoutDirection="rtl">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp"
                            android:gravity="center_vertical"
                            >
                            <EditText
                                android:id="@+id/addInfo"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="8dp"
                                android:textSize="16sp"
                                android:background="#00000000"
                                android:textDirection="rtl"
                                android:hint="@string/addInfo"
                                />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/password"
                        android:gravity="right"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/custom_edittext_field"
                        android:orientation="horizontal"
                        android:layoutDirection="rtl">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/svgexport_60"
                            android:layout_margin="12dp"/>
                        <View
                            android:layout_width="3dp"
                            android:layout_height="match_parent"
                            android:background="#DDD"
                            />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp"
                            android:gravity="center_vertical"
                            >
                            <EditText
                                android:id="@+id/EditProfilePasswordEditText"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:inputType="textPassword"
                                android:padding="8dp"
                                android:textSize="16sp"
                                android:background="#00000000"
                                android:textDirection="rtl"
                                android:layout_marginLeft="16dp"
                                />
                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/fi_sr_eye_crossed"
                                android:background="#00000000"
                                />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="42dp"
                    >
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_sign_up_btn"
                        android:id="@+id/confirm"
                        android:textColor="#FFF"
                        android:text="@string/edit"
                        android:layout_marginTop="8dp"
                        />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="119dp"
            android:layout_height="119dp"
            android:elevation="12dp"
            android:id="@+id/view2"
            app:cardCornerRadius="60dp"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9"
            android:background="#00000000"
            android:layout_below="@id/topView"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            >

            <ImageView
                android:id="@+id/proflieImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/icon"
                android:layout_below="@id/topView"
                android:scaleType="centerCrop"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rounded_image"
                />
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</ScrollView>