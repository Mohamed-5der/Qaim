<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.MainFragment" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/group8937"
        android:layout_marginTop="-200dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:id="@+id/topView"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/LogIn"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#FFF"
            android:textSize="25sp"
            />
                <ImageButton
                    android:id="@+id/imageBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/group9810"
                    android:background="#00000000"
                    android:layout_marginRight="16dp"
                    />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topView"
        android:layout_marginTop="24dp"
        android:background="@drawable/bottom_sheet_dialog"
        >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           >
           <androidx.cardview.widget.CardView
               xmlns:card_view="http://schemas.android.com/apk/res-auto"
               android:id="@+id/client_card_view"
               android:layout_gravity="center"
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="1"
               card_view:cardCornerRadius="30dp"
               android:layout_margin="16dp"
               card_view:cardBackgroundColor="@color/cardViewBackgroundColor"
               >
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="horizontal"
                   >
                   <ImageView
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_height="match_parent"
                       android:src="@drawable/usability_testing_pana"/>
                   <TextView
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_height="match_parent"
                       android:textSize="30sp"
                       android:text="@string/client"
                       android:gravity="center"
                       />
               </LinearLayout>

           </androidx.cardview.widget.CardView>
           <androidx.cardview.widget.CardView
               xmlns:card_view="http://schemas.android.com/apk/res-auto"
               android:id="@+id/company_card_view"
               android:layout_gravity="center"
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="1"
               card_view:cardCornerRadius="30dp"
               android:layout_margin="16dp"
               card_view:cardBackgroundColor="@color/cardViewBackgroundColor"
               >
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="horizontal"
                   >
                   <ImageView
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_height="match_parent"
                       android:src="@drawable/meeting_pana"/>
                   <TextView
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_height="match_parent"
                       android:textSize="30sp"
                       android:text="@string/company"
                       android:gravity="center"
                       />
               </LinearLayout>

           </androidx.cardview.widget.CardView>
           <androidx.cardview.widget.CardView
               xmlns:card_view="http://schemas.android.com/apk/res-auto"
               android:id="@+id/previewer_card_view"
               android:layout_gravity="center"
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="1"
               card_view:cardCornerRadius="30dp"
               android:layout_margin="16dp"
               card_view:cardBackgroundColor="@color/cardViewBackgroundColor"
               >

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="horizontal"
                   >
                   <ImageView
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_height="match_parent"
                       android:src="@drawable/construction_pana"/>
                   <TextView
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_height="match_parent"
                       android:textSize="30sp"
                       android:text="@string/previewer"
                       android:gravity="center"
                       />
               </LinearLayout>
           </androidx.cardview.widget.CardView>
       </LinearLayout>
    </ScrollView>

</RelativeLayout>