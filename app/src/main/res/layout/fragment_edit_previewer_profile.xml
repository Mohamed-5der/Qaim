<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.EditPreviewerProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/group8937"
        android:layout_marginTop="-200dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:id="@+id/topView"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Profile"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#FFF"
            android:textSize="25sp"
            />
        <ImageButton
            android:id="@+id/imageBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/group9810"
            android:background="#00000000"
            android:layout_marginRight="16dp"
            />


    </RelativeLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottom_sheet_dialog"
        android:layout_below="@id/topView"
        android:layout_marginTop="64dp"
        >


        <!-- Star and label container -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_alignParentTop="true"

            android:padding="8dp"
            android:background="#80000000">

            <!-- Star ImageView -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star"
                android:layout_marginEnd="4dp"
                />

            <!-- Star value TextView -->
            <TextView
                android:id="@+id/lbl_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_gravity="center"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="44dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="center_horizontal"
                android:textSize="30sp"
                android:id="@+id/userName"
                android:textColor="#000"
                android:fontFamily="regular"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/name"
                    android:gravity="right"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/custom_edittext_field"
                    android:orientation="horizontal"
                    android:layoutDirection="rtl">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/iconly_light_profile"
                        android:layout_margin="12dp"/>

                    <View
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:background="#DDD"
                        />

                    <EditText
                        android:id="@+id/EditProfileNameEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:textSize="16sp"
                        android:gravity="center_vertical"
                        android:background="#00000000" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/client_company_email"
                    android:gravity="right"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/custom_edittext_field"
                    android:orientation="horizontal"
                    android:layoutDirection="rtl">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/iconly_light_message"
                        android:layout_margin="12dp"/>

                    <View
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:background="#DDD"
                        />

                    <EditText
                        android:id="@+id/EditProfileEmailEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:textSize="16sp"
                        android:gravity="center_vertical"
                        android:background="#00000000" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/client_company_phone"
                    android:gravity="right"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/custom_edittext_field"
                    android:orientation="horizontal"
                    android:layoutDirection="rtl">

                    <com.hbb20.CountryCodePicker
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/countryCode"
                        app:ccp_defaultNameCode="sa"
                        />

                    <View
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:background="#DDD"
                        />

                    <EditText
                        android:id="@+id/phoneEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:textSize="16sp"
                        android:inputType="number"
                        android:maxLength="11"
                        android:hint="50"
                        android:gravity="center_vertical"
                        android:background="#00000000" />
                </LinearLayout>
            </LinearLayout>
            <!--        // password filed-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/password"
                    android:gravity="right"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/custom_edittext_field"
                    android:orientation="horizontal"
                    android:layoutDirection="rtl">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/svgexport_60"
                        android:layout_margin="12dp"/>

                    <View
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:background="#DDD"
                        />

                    <EditText
                        android:id="@+id/passwordEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:textSize="16sp"
                        android:inputType="textPassword"
                        android:gravity="center_vertical"
                        android:background="#00000000" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/addInfo"
                    android:gravity="right"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@drawable/custom_edittext_field"
                    android:orientation="horizontal"
                    android:layoutDirection="rtl">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:gravity="center_vertical"
                        >
                        <EditText
                            android:id="@+id/addInfo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp"
                            android:textSize="16sp"
                            android:background="#00000000"
                            android:textDirection="rtl"
                            android:hint="@string/addInfo"
                            />
                    </RelativeLayout>


                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/chooseCity"
                    android:gravity="right"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/custom_edittext_field"
                    android:orientation="horizontal"
                    android:layoutDirection="rtl">


                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:id = "@+id/citySpinner"
                        android:entries="@array/areaSpinner"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/chooseArea"
                    android:gravity="right"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/custom_edittext_field"
                    android:orientation="horizontal"
                    android:layoutDirection="rtl">


                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:id = "@+id/Area1spinner"
                        android:entries="@array/areaSpinner"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/chooseArea"
                        android:gravity="right"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/custom_edittext_field"
                        android:orientation="horizontal"
                        android:layoutDirection="rtl">


                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="12dp"
                            android:id = "@+id/Area2spinner"
                            android:entries="@array/areaSpinner"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/chooseArea"
                        android:gravity="right"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/custom_edittext_field"
                        android:orientation="horizontal"
                        android:layoutDirection="rtl">


                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="12dp"
                            android:id = "@+id/Area3spinner"
                            android:entries="@array/areaSpinner"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/fess"
                    android:gravity="right"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/custom_edittext_field"
                    android:orientation="horizontal"
                    android:layoutDirection="rtl">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:gravity="center_vertical"
                        >
                        <EditText
                            android:id="@+id/addFees"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp"
                            android:textSize="16sp"
                            android:background="#00000000"
                            android:textDirection="rtl"
                            android:hint="@string/addFess"
                            />
                    </RelativeLayout>


                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/addId"
                    android:gravity="right"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/custom_edittext_field"
                    android:orientation="horizontal"
                    android:layoutDirection="rtl">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/svgexport_6"
                        android:layout_margin="12dp"/>

                    <View
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:background="#DDD"
                        />

                    <EditText
                        android:id="@+id/addInfoAboutMe"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:textSize="16sp"
                        android:gravity="center_vertical"
                        android:background="#00000000"
                        android:inputType="number"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/experienceField"
                    android:gravity="right"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/custom_edittext_field"
                    android:orientation="horizontal"
                    android:layoutDirection="rtl">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:gravity="center_vertical"
                        >
                        <EditText
                            android:id="@+id/experienceField"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp"
                            android:textSize="16sp"
                            android:background="#00000000"
                            android:textDirection="rtl"
                            android:hint="@string/addExperienceField"
                            />
                    </RelativeLayout>


                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/yearsOfWork"
                    android:gravity="right"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/custom_edittext_field"
                    android:orientation="horizontal"
                    android:layoutDirection="rtl">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:gravity="center_vertical"
                        >
                        <EditText
                            android:id="@+id/yearsOfWork"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp"
                            android:textSize="16sp"
                            android:background="#00000000"
                            android:textDirection="rtl"
                            android:hint="@string/addyearsOfWork"
                            />
                    </RelativeLayout>


                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="42dp"
                >

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_sign_up_btn"
                    android:id="@+id/confirm"
                    android:textColor="#FFF"
                    android:text="@string/edit"
                    android:layout_marginTop="8dp"
                    />


            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="119dp"
            android:layout_height="119dp"
            android:elevation="12dp"
            android:id="@+id/view2"
            app:cardCornerRadius="60dp"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9"
            android:background="#00000000"
            android:layout_below="@id/topView"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            >

            <ImageView
                android:id="@+id/proflieImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/icon"
                android:layout_below="@id/topView"
                android:scaleType="centerCrop"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rounded_image"
                />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</ScrollView>