<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.OrderDetailsFragment" >


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/group8937"
            android:layout_marginTop="-200dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:id="@+id/topView"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/offerDetails"
                android:layout_centerHorizontal="true"
                android:textColor="#FFF"
                android:textSize="25sp"
                android:id="@+id/text"
                android:layout_marginTop="16dp"
                />
            <ImageButton
                android:id="@+id/imageBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/group9810"
                android:background="#00000000"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/maskgroup17"
                android:layout_below="@id/text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/topView"
            android:layout_marginTop="24dp"
            android:background="@drawable/bottom_sheet_dialog"
            >
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/nameOfOrderDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:text="@string/name"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"

                        />
                    <TextView
                        android:id="@+id/descriptionOfOrderDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:textSize="16sp"

                        android:text="@string/description"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginBottom="8dp"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:id="@+id/openFile"
                        android:background="@drawable/custom_edittext_field"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageFile"
                            android:src="@drawable/svgexport_2"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@id/imageFile"
                            android:textColor="#000"
                            android:text="@string/displayFile"
                            android:layout_marginRight="8dp"
                            />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="16dp"
                        >
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/endOrderBtn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/custom_end_orders_btn"
                            android:textColor="#FFF"
                            android:text="@string/accept"
                            android:layout_marginBottom="16dp"
                            />
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/editOrderBtn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/custom_edit_orders_btn"
                            android:textColor="#FFF"
                            android:text="@string/reject"
                            android:layout_marginBottom="64dp"
                            />

                    </LinearLayout>


                </LinearLayout>


            </ScrollView>
        </RelativeLayout>

</RelativeLayout>







