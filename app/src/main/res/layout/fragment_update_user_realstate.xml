<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.UpdateUserRealstateFragment" >



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/group8937"
        android:layout_marginTop="-200dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:id="@+id/topView"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/UpdateRealeState"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#FFF"
            android:textSize="25sp"
            />
        <ImageButton
            android:id="@+id/imageBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/group9810"
            android:background="#00000000"
            android:layout_marginRight="16dp"
            />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topView"
        android:background="@drawable/bottom_sheet_dialog"
        android:layout_marginTop="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/realStateTittle"
                android:gravity="right"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/custom_edittext_field"
                android:orientation="horizontal"
                android:layoutDirection="rtl">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:background="#00000000"
                    android:textDirection="rtl"
                    android:id = "@+id/tittle"
                    android:backgroundTint="#00000000"
                    />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/TypeRealState"
                android:gravity="right"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/custom_edittext_field"
                android:orientation="horizontal"
                android:layoutDirection="rtl">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:id = "@+id/spinner"
                    android:layout_gravity="center"
                    />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/RealStateArea"
                android:gravity="right"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/custom_edittext_field"
                android:orientation="horizontal"
                android:layoutDirection="rtl">


                <EditText
                    android:id="@+id/addRealStateArea"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:background="#00000000"
                    android:textDirection="rtl"
                    android:inputType="number"
                    android:hint="@string/addRealStateArea"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/chooseNeighborhood"
                    android:gravity="right"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/chooseCity"
                    android:gravity="right"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layoutDirection="rtl">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="60dp"
                    android:background="@drawable/custom_edittext_field"
                    android:orientation="horizontal"
                    android:layoutDirection="rtl">

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:id = "@+id/citySpinner"
                        android:layout_gravity="center"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/custom_edittext_field"
                    android:layoutDirection="rtl">

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:id = "@+id/neiborhood"
                        android:layout_gravity="center"
                        />

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/someAddtionalDetails"
                android:gravity="right"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/custom_edittext_field"
                android:orientation="horizontal"
                android:layoutDirection="rtl">


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:background="#00000000"
                    android:textDirection="rtl"
                    android:id="@+id/addAddtionalDetails"
                    android:hint="@string/addAddtionalDetails"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layoutDirection="rtl"
                android:layout_marginTop="16dp"
                >
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/custom_add_btn"
                    android:text="@string/addEstatePhoto"
                    android:drawableLeft="@drawable/svgexport_1"
                    android:paddingLeft="12dip"
                    android:layout_marginLeft="8dp"
                    android:textColor="#FFF"
                    android:textSize="10sp"
                    android:id="@+id/addEstatePhoto"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/custom_add_btn"
                    android:text="@string/addLocation"
                    android:drawableLeft="@drawable/fi_sr_marker"
                    android:paddingLeft="20dip"
                    android:textColor="#FFF"
                    android:textSize="10sp"

                    android:id="@+id/addLocation"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layoutDirection="rtl"
                android:layout_marginTop="16dp"

                >
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageRecycleView"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageAddRecycleView"
                    />

            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_end_orders_btn"
                android:text="@string/confirm"
                android:textColor="#FFF"
                android:id="@+id/confirm"
                android:layout_marginBottom="84dp"
                />

        </LinearLayout>

    </ScrollView>



</RelativeLayout>