<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/group8937"
    android:fitsSystemWindows="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:elevation="12dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:id="@+id/card"
            android:innerRadius="0dp"
            android:shape="rectangle"
            app:cardCornerRadius="29dp"
            android:layout_margin="5dp"
            android:layout_centerHorizontal="true"
            android:thicknessRatio="1.9"
            android:background="#00000000"
            android:scaleType="centerCrop"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ellipse221"
                android:id="@+id/ProfilePhoto"
                android:scaleType="fitXY"
                />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/card"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:id="@+id/profileRel"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome"
                android:textSize="16sp"
                android:textColor="#FFF"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#FFF"
                android:layout_gravity="center"
                />


        </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/group5339"
            android:background="#00000000"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/editprofileBtn"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="16dp"
        >
<!--        <RelativeLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginBottom="16dp"-->
<!--            android:id="@+id/reportsRel"-->
<!--            >-->
<!--            <ImageView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:src="@drawable/group_2"-->
<!--                android:layout_alignParentLeft="true"-->
<!--                android:layout_centerVertical="true"-->
<!--                android:id="@+id/report"-->
<!--                />-->
<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="@string/report"-->
<!--                android:layout_toRightOf="@id/report"-->
<!--                android:layout_marginLeft="8dp"-->
<!--                android:layout_centerVertical="true"-->
<!--                android:textColor="#FFF"-->
<!--                />-->

<!--        </RelativeLayout>-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:id="@+id/balanceRel"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/group_2"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:id="@+id/balance"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/myBalance"
                android:layout_toRightOf="@id/balance"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:textColor="#FFF"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:id="@+id/paymentRel"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/group_1"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:id="@+id/payment"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/payment"
                android:layout_toRightOf="@id/payment"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:textColor="#FFF"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/group5285"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:id="@+id/noti"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/noti"
                android:layout_toRightOf="@id/noti"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:textColor="#FFF"
                android:id="@+id/notitv"
                />
            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/switchNoti"
                android:checked="true"
                android:visibility="gone"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:id="@+id/terms"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/group_2"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:id="@+id/termsimg"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/termsAndConditions"
                android:layout_toRightOf="@id/termsimg"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:textColor="#FFF"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/aboutUsRel"
            android:layout_marginBottom="16dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/info"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:id="@+id/aboutApp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/aboutApp"
                android:layout_toRightOf="@id/aboutApp"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:textColor="#FFF"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:id="@+id/companyVipRel"
            >
            <ImageView
                android:id="@+id/vip_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star_icon"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vip_company"
                android:layout_toRightOf="@id/vip_company"
                android:layout_marginLeft="8dp"
                android:id="@+id/vipText"
                android:layout_centerVertical="true"
                android:textColor="#FFF"
                />

        </RelativeLayout>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/logOut1"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/group5287"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:id="@+id/logOut"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/logOut"
            android:layout_toRightOf="@id/logOut"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:textColor="#FFF"
            />

    </RelativeLayout>



</RelativeLayout>